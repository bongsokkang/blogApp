<!DOCTYPE html>
<html lang="en" dir="ltr">
  <% include ./partials/head %>
  <body>
    <% include ./partials/nav %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h4 align='center'>Post To The Wall</h4>
          <form align='center'action="/posts" method="POST">
            <textarea
              name="content"
              rows="5"
              cols="40">
            </textarea>
              <div>
              <input type="submit" value="Add Post">
              </div>
          </form>
        </div>
        <div class="col-md-4">
          <%posts.forEach((post) => {%>
            <a href="/posts/<%=post._id%>">
            <div class="text-box"align='center'>
              <p align='center'><%=post.content%></p>
            </div>
            </a>
            <form align='center'action="/comments/<%= post._id %>" method="POST">
              <input type="text" name="comments">
              <input type="submit"value="Add a Comment">
            </form>
            <div class="container">

              <%post.comments.forEach((comment) => {%>
                <p align='center'><%= comment.content%></p>
              <%})%>
            </div>
          <%})%>

        </div>
        <div class="col-md-4">
        </div>
      </div>
    </div>
  </body>
</html>
